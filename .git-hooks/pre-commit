#!/bin/sh
#
# A pre-commit hook script to that the code compiles

echo  "===="
echo "Precommit: Compiling before commit. Add FORCE to the END of your commit message to override"
echo  "===="

LOGFILE=precommit.log
npx tsc > $LOGFILE 2>&1
RESULT="$?"
if [  "$RESULT" == "0" ]; then
	echo "Compiled successfully"
	git add bin/*
	exit 0
fi
echo "Compilation failed"
exit 3