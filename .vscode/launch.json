    "version": "0.2.0",
    "configurations": [
		{
			"name": "Sample Site",
			"type": "node-terminal",
			"request": "launch",
			"command": "npx ts-node src/create-yaspp --target /c/temp/sample-yaspp",
			"env": {
				"NODE_OPTIONS": "--inspect"
			}
		},
		{
			"name": "Create JS in Temp",
			"type": "node-terminal",
			"request": "launch",
			"command": "npx ts-node src/create-yaspp --target /c/temp/jehovascript --repository git@github.com:imdfl/jehovascript-content.git --content-root content --content-index . --assets-root=assets --locale-root locales --langs en,he --branch master",
			"env": {
				"NODE_OPTIONS": "--inspect"
			}
		},
		{
			"name": "No Content JS in Temp",
			"type": "node-terminal",
			"request": "launch",
			"command": "npx ts-node src/create-yaspp --target /c/temp/jehovascript --repository git@github.com:imdfl/jehovascript-content.git --content-root content --content-index . --assets-root=assets --locale-root locales --langs en,he --branch master --no-content --auto",
			"env": {
				"NODE_OPTIONS": "--inspect"
			}
		},
		{
			"name": "Create Repo-Mel",
			"type": "node-terminal",
			"request": "launch",
			"command": "npx ts-node src/create-yaspp --repository git@github.com:GetUnika/mels-loop-content.git --content-root public/content --content-index . --locale-root locales --langs en,he --branch master",
			"env": {
				"NODE_OPTIONS": "--inspect"
			}
		},
		{
			"name": "Mel/Repo, no content",
			"type": "node-terminal",
			"request": "launch",
			"command": "npx ts-node src/create-yaspp  --target /c/temp/mels-loop2 --auto --no-content --repository git@github.com:GetUnika/mels-loop-content.git --branch master",
			"env": {
				"NODE_OPTIONS": "--inspect"
			}
		},
		{
			"name": "Create Mel/Repo Only",
			"type": "node-terminal",
			"request": "launch",
			"command": "npx ts-node src/create-yaspp  --target /c/temp/mels-loop2 --repository git@github.com:GetUnika/mels-loop-content.git --branch master",
			"env": {
				"NODE_OPTIONS": "--inspect"
			}
		},
		{
			"name": "Create Mel",
			"type": "node-terminal",
			"request": "launch",
			"command": "npx ts-node src/create-yaspp --repository git@github.com:tomerlichtash/mels-loop.git --content-root public/content --content-index docs/the-story-of-mel/codex --locale-root src/locales --langs en,he --branch master",
			"env": {
				"NODE_OPTIONS": "--inspect"
			}
		},
		{
			"name": "Dry/Create Mel",
			"type": "node-terminal",
			"request": "launch",
			"command": "npx ts-node src/create-yaspp --dry --repository git@github.com:tomerlichtash/mels-loop.git --content-root public/content --content-index docs/the-story-of-mel/codex --locale-root src/locales --langs en,he --branch master",
			"env": {
				"NODE_OPTIONS": "--inspect"
			}
		},
		{
			"name": "Init Mel",
			"type": "node-terminal",
			"request": "launch",
			"command": "npx ts-node yaspp/scripts/build/init-yaspp --project .",
			"env": {
				"NODE_OPTIONS": "--inspect"
			}
		},
		{
			"name": "Dry refresh",
			"type": "node-terminal",
			"request": "launch",
			"command": "npx ts-node src/create-yaspp --auto --no-content",
			"env": {
				"NODE_OPTIONS": "--inspect"
			}
		}

    ]
}